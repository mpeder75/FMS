{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionGateway": "Server=localhost,11434;Database=ApiGateway;User Id=sa;Password=Password1234!;TrustServerCertificate=true"
  },
  "ReverseProxy": {
    "Routes": {
      "exitslipRoute": {
        "ClusterId": "exitslipCluster",
        "Match": {
          "Path": "/exitslip/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "feedbackRoute": {
        "ClusterId": "feedbackCluster",
        "Match": {
          "Path": "/feedback/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "exitslipCluster": {
        "Destinations": {
          "exitslipDestination": {
            "Address": "http://exitslipservice.api:8080/"
          }
        }
      },
      "feedbackCluster": {
        "Destinations": {
          "feedbackDestination": {
            "Address": "http://feedbackservice.api:8080/"
          }
        }
      }
    }
  }
}